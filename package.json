{
  "name": "term-ng",
  "version": "0.5.0",
  "description": "Terminal/$TERM feature snooping and whitelisting",
  "main": "index.js",
  "scripts": {
    "test": "xo",
    "colors": "scripts/colortest.pl"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkGriffiths/term-ng.git"
  },
  "engines": {
    "node": ">= 4.2 <6.0"
  },
  "keywords": [
    "24bit",
    "color",
    "ansi",
    "truecolor",
    "trucolor",
    "sgr",
    "cli",
    "tty",
    "iterm",
    "xterm"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/term-ng/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/term-ng#readme",
  "devDependencies": {
    "@thebespokepixel/cordial": "*",
    "xo": "^0.12.1"
  },
  "dependencies": {
    "deep-assign": "^2.0.0",
    "supports-color": "^3.1.2"
  },
  "build_number": 0,
  "xo": {
    "semicolon": false,
    "esnext": true,
    "rules": {
      "prefer-const": 1,
      "no-var": 0,
      "key-spacing": [
        0,
        {
          "beforeColon": false,
          "afterColon": false
        }
      ],
      "new-cap": [
        2,
        {
          "newIsCap": false,
          "capIsNew": true
        }
      ]
    }
  }
}
